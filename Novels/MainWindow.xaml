<Window x:Class="Novels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Novels" xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        mc:Ignorable="d"
        Title="青衣小说网桌面端" Height="720" Width="1280">
    <Grid>
        <ToolBar x:Name="ToolBar" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="auto">
            <Button x:Name="BackBtn" Content="回到主页" Click="BackBtn_Click"/>
            <Button x:Name="ReloadBtn" Content="刷新" Click="ReloadBtn_Click"/>
            <Button x:Name="OfflineModeBtn" Content="离线模式" Click="OfflineModeBtn_Click"/>
            <Button x:Name="DownloadOfflinePackageBtn" Content="下载离线包" Click="DownloadOfflinePackageBtn_Click"/>
            <Button x:Name="CheckUpdateBtn" Content="检查更新" Click="CheckUpdateBtn_Click"/>
        </ToolBar>
        <cefSharp:ChromiumWebBrowser x:Name="webBrowser" Margin="0,35,0,0" />
    </Grid>
</Window>
